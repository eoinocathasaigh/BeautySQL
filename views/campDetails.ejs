<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Campaign Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/campaignStyles.css">
</head>
<body class="container py-4">
    <h2 class="text-center mb-4">Campaign Data</h2>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Profile</th>
                <th>Username</th>
                <th>Product</th>
                <th>Review</th>
                <th>Rating</th>
                <th>Recommendation</th>
                <th>Review Video</th>
                <th>Review Date</th>
            </tr>
        </thead>
        <tbody>
            <% campDetails.forEach(function(campaign) { %>
            <tr>
                <td>
                    <% if (campaign.profile_image_url) { %>
                        <img src="<%= campaign.profile_image_url %>" alt="Profile" class="profile-img">
                    <% } %>
                </td>
                <td><%= campaign.username %></td>
                <td>
                    <img src="<%= campaign.product_image_url %>" alt="Product" class="product-img">
                    <br><%= campaign.product_title %>
                </td>
                <td>
                    <strong><%= campaign.review_title %></strong>
                    <p><%= campaign.review_description %></p>
                </td>
                <td><%= campaign.review_rating %>/5</td>
                <td><%= campaign.will_recommend ? "Yes" : "No" %></td>
                <td>
                    <% if (campaign.video_url) { %>
                        <div class="video-container">
                            <video controls width="100%">
                                <source src="<%= campaign.video_url %>" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </div>
                    <% } else { %>
                        No Video
                    <% } %>
                </td>
                <td><%= new Date(campaign.review_created_at).toLocaleDateString() %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>